{
  "name": "sevent-pig-cloud-doc",
  "cnName": "七猪云文档",
  "version": "0.0.2",
  "main": "main.js",
  "description": "Online Markdown Editor Doc using Qinui cloud service",
  "author": {
    "name": "ar414",
    "email": "root@ar414.com"
  },
  "repository": "https://github.com/ar414-com/sevent-pig-cloud-doc.git",
  "build": {
    "appId": "com.ar414.sevent-pig-cloud",
    "releaseInfo": {
      "releaseName": "${version}",
      "releaseNotes": "releaseNotes Test"
    },
    "directories": {
      "buildResources": "assets"
    },
    "productName": "七猪云文档",
    "copyright": "Copyright © 2020 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/html/**/*",
      "src/class/**/*",
      "main.js",
      "src/menuTemplate.js"
    ],
    "extends": null,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon1.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon1.icns"
    },
    "dmg": {
      "title": "${productName}",
      "background": "assets/dmgBackground.png",
      "icon": "assets/icon1.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 400
      },
      "contents": [
        {
          "x": 430,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 120,
          "y": 180,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "${productName}",
      "artifactName": "${name} Setup.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "sevent-pig-cloud-doc",
        "vPrefixedTagName": true,
        "releaseType": "release"
      }
    ]
  },
  "private": true,
  "dependencies": {
    "electron-updater": "^4.2.5",
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1",
    "axios": "^0.19.2",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "qiniu": "^7.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-reload": "nodemon --watch main.js --watch src/menuTemplate.js --exec \"electron .\"",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:3000 && electron .\"",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "predist": "npm run build",
    "dist": "electron-builder",
    "prerelease": "npm run build",
    "release": "cross-env GH_TOKEN=af5e2e49c922744a92b1ebd65624f00771385b9e electron-builder"
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-brands-svg-icons": "^5.12.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "classnames": "^2.2.6",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "electron": "^8.0.0",
    "electron-builder": "^22.4.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "react-simplemde-editor": "^4.1.0",
    "uuid": "^3.4.0",
    "wait-on": "^4.0.0"
  }
}
